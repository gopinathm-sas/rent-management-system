{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "firestore.rules",
      "storage.rules",
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "functions/**",
      "tests/**",
      "clear-data.js",
      "delete_collections.js",
      "DELETE_README.md",
      "DASHBOARD_GUIDE.md",
      "SECURITY.md",
      "VERSION_4.0_MASTER_COPY.md",
      "hello.txt",
      "**/.*"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
